{
  "name": "traverse-vscode",
  "displayName": "Traverse Solidity Analyzer",
  "description": "PREVIEW: Solidity code analysis and visualization powered by Traverse - Experimental features, expect changes",
  "version": "0.1.5",
  "publisher": "GianlucaBrigandi",
  "repository": {
    "type": "git",
    "url": "https://github.com/calltrace/traverse-vscode"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/calltrace/traverse-vscode/issues"
  },
  "homepage": "https://github.com/calltrace/traverse-vscode#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "icon.png",
  "categories": [
    "Programming Languages",
    "Linters",
    "Visualization"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "smart contracts",
    "call graph",
    "mermaid",
    "preview",
    "experimental"
  ],
  "preview": true,
  "galleryBanner": {
    "color": "#FF6B35",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Traverse LSP",
      "properties": {
        "traverse-lsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the Traverse LSP server"
        },
        "traverse-lsp.serverPath": {
          "scope": "machine",
          "type": "string",
          "default": "",
          "description": "Path to the Traverse LSP server executable. If empty, uses the bundled server"
        },
        "traverse-lsp.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server"
        },
        "traverse-lsp.enableChunking": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable chunking of large analysis outputs to handle big codebases more efficiently"
        }
      }
    },
    "commands": [
      {
        "command": "traverse.generateCallGraph",
        "title": "Generate Call Graph",
        "category": "Traverse"
      },
      {
        "command": "traverse.generateSequenceDiagram",
        "title": "Generate Sequence Diagram",
        "category": "Traverse"
      },
      {
        "command": "traverse.generateStorageAnalysis",
        "title": "Generate Storage Analysis",
        "category": "Traverse"
      },
      {
        "command": "traverse.generateAllAnalyses",
        "title": "Generate All Analyses",
        "category": "Traverse"
      },
      {
        "command": "traverse.restart",
        "title": "Restart Language Server",
        "category": "Traverse"
      },
      {
        "command": "traverse.downloadServer",
        "title": "Download Language Server",
        "category": "Traverse"
      },
      {
        "command": "traverse.toggleChunking",
        "title": "Toggle Chunking",
        "category": "Traverse"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateCallGraph",
          "group": "traverse@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateSequenceDiagram",
          "group": "traverse@2"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateStorageAnalysis",
          "group": "traverse@3"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateAllAnalyses",
          "group": "traverse@4"
        }
      ],
      "commandPalette": [
        {
          "command": "traverse.generateCallGraph"
        },
        {
          "command": "traverse.generateSequenceDiagram"
        },
        {
          "command": "traverse.generateStorageAnalysis"
        },
        {
          "command": "traverse.generateAllAnalyses"
        },
        {
          "command": "traverse.restart"
        },
        {
          "command": "traverse.downloadServer"
        },
        {
          "command": "traverse.toggleChunking"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test": "npm run test:integration && npm run test:chunking && npm run test:lsp",
    "test:integration": "node ./out/test/run-integration-tests.js",
    "test:chunking": "node ./out/test/test-chunking.js",
    "test:lsp": "node ./out/test/mock-lsp-server.js",
    "test:vscode": "node ./out/test/runTest.js",
    "test:all": "npm run compile && npm run package && npm run test",
    "pretest": "npm run compile && npm run package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
